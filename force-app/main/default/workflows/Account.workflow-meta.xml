    <rules>
        <fullName>Account - Email Alert When There Is No Closed Opportunity After 12 Months Of The Categorisation Date</fullName>
        <active>true</active>
        <description>Email alert to Account Owner if there is no closed won opportunity after 12 months of categorisation date</description>
        <formula>NOT( ISBLANK( Categorisation_Date__c ) )  &amp;&amp; ( ISBLANK(Last_Opportunity_Closed_Date__c)  ||  Categorisation_Date__c  &gt;  Last_Opportunity_Closed_Date__c )</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Account_Notify_Account_Owner_for_No_Closed_Won_opportunity_after_12_months</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Account.Categorisation_Date__c</offsetFromField>
            <timeLength>365</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
